{
  "name": "butes",
  "version": "1.0.0",
  "description": "Client library for interacting with Siren APIs",
  "author": "Graham Cox <graham@grahamcox.co.uk>",
  "keywords": [
    "siren",
    "hypermedia",
    "rest",
    "client"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "run-s test:lint test:unit test:integration",
    "test:unit": "ava --tap | faucet",
    "test:integration": "ava --tap --config ava-integration.config.js | faucet",
    "test:lint": "eslint . --ext .ts",
    "build": "tsc",
    "link": "npm run build && cd dist && npm link"
  },
  "license": "ISC",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "ava": "^3.14.0",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.3.0",
    "faucet": "^0.0.1",
    "nock": "^13.0.5",
    "node-fetch": "^2.6.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
